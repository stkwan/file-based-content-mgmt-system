<form action="/<%= params[:filename] %>" method="post">
  <label for="content">Edit content of <%= params[:filename] %>:</label>
  <div> 
    <textarea name="content" id="content" type="text" rows="20" cols="100"><%= @content %></textarea>
  </div>
  <button type="submit">Save Changes</button>
  <a href="/">Cancel</a>
</form>